{
  "components": [
    {
      "type": "text",
      "text": "# Create Job Profile"
    },
    {
      "type": "text",
      "text": "Review and finalize the job profile to store. Most fields are prefilled from previous steps."
    },
    {
      "type": "group",
      "label": "Reference (read-only)",
      "showOutline": true,
      "components": [
        {
          "type": "textfield",
          "label": "Company",
          "key": "hiringRequest.company.name",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Job title (request)",
          "key": "hiringRequest.job_opening.job_title",
          "readOnly": true
        },
        {
          "type": "number",
          "label": "Openings",
          "key": "hiringRequest.job_opening.number_of_openings",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Work mode (request)",
          "key": "hiringRequest.job_opening.work_mode",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Employment type (request)",
          "key": "hiringRequest.job_opening.employment_details.job_type",
          "readOnly": true
        }
      ]
    },
    {
      "type": "group",
      "label": "Job profile identity",
      "showOutline": true,
      "components": [
        {
          "type": "textfield",
          "label": "Internal Job Profile ID",
          "key": "jobProfile.profileId",
          "description": "Example: JP-2026-001",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Job ID from origin company",
          "key": "hiringRequest.job_opening.job_id",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Job title (final)",
          "key": "jobPostingTemplate.title",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Department",
          "key": "hiringRequest.job_opening.department",
          "validate": { "required": true }
        }
      ]
    },
    {
      "type": "group",
      "label": "Job posting (final stored version)",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "Posting summary",
          "key": "jobPostingTemplate.summary",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Responsibilities",
          "key": "jobPostingTemplate.responsibilities",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Requirements",
          "key": "jobPostingTemplate.requirements",
          "validate": { "required": true }
        },
        {
          "type": "textarea",
          "label": "Benefits (optional)",
          "key": "jobPostingTemplate.benefits"
        },
        {
          "type": "textfield",
          "label": "Location (final text)",
          "key": "jobPostingTemplate.locationText",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Work mode (posting)",
          "key": "jobPostingTemplate.workMode",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Employment type (posting)",
          "key": "jobPostingTemplate.employmentType",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Salary text (optional)",
          "key": "jobPostingTemplate.salaryText"
        },
        {
          "type": "textarea",
          "label": "How to apply",
          "key": "jobPostingTemplate.howtoapply",
                  "defaultValue": "Apply via the company careers page with your CV (and portfolio if relevant).",

          "validate": { "required": true }
        },
        {
          "type": "checkbox",
          "label": "Ready to publish online",
          "key": "jobPostingTemplate.publishOnline"
        }
      ]
    },
    {
      "type": "group",
      "label": "Candidate rules (stored references)",
      "showOutline": true,
      "components": [
        {
          "type": "number",
          "label": "Minimum legal working age",
          "key": "candidateRules.eligibility.minLegalWorkingAge",
          "validate": { "required": true, "min": 0 }
        },
        {
          "type": "checkbox",
          "label": "Work authorization required",
          "key": "candidateRules.eligibility.workAuthorizationRequired"
        },
        {
          "type": "textfield",
          "label": "Required education level",
          "key": "candidateRules.eligibility.requiredEducationLevel",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Minimum years experience",
          "key": "candidateRules.eligibility.minYearsExperience",
          "validate": { "required": true, "min": 0 }
        },
        {
          "type": "number",
          "label": "Rating scale min",
          "key": "candidateRules.rating.scaleMin",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Rating scale max",
          "key": "candidateRules.rating.scaleMax",
          "validate": { "required": true, "min": 1 }
        },
        {
          "type": "number",
          "label": "Minimum passing score",
          "key": "candidateRules.rating.minimumPassingScore",
          "validate": { "required": true, "min": 0 }
        }
      ]
    },
    {
      "type": "group",
      "label": "ATS checklist (stored)",
      "showOutline": true,
      "components": [
        {
          "type": "checkbox",
          "label": "Reject on eligibility fail",
          "key": "atsChecklist.rejectOnEligibilityFail"
        },
        {
          "type": "checkbox",
          "label": "Reject on low score",
          "key": "atsChecklist.rejectOnLowScore"
        },
        {
          "type": "checkbox",
          "label": "Manual review for borderline",
          "key": "atsChecklist.manualReviewForBorderline"
        },
        {
          "type": "textarea",
          "label": "Required documents (one per line)",
          "key": "atsChecklist.requiredDocuments"
        }
      ]
    },
    {
      "type": "group",
      "label": "Notes (optional)",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "Job profile notes",
          "key": "jobProfile.notes"
        }
      ]
    }
  ],
  "type": "default",
  "id": "create-job-profile",
  "executionPlatform": "Camunda Cloud",
  "executionPlatformVersion": "8.8.0",
  "schemaVersion": 19
}