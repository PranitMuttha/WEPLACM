{
  "components": [
    {
      "type": "text",
      "text": "# Define candidate rating criteria"
    },
    {
      "type": "group",
      "label": "Context (read-only)",
      "showOutline": true,
      "components": [
        {
          "type": "textfield",
          "label": "Job title",
          "key": "hiringRequest.job_opening.job_title",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Department",
          "key": "hiringRequest.job_opening.department",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Work mode",
          "key": "hiringRequest.job_opening.work_mode",
          "readOnly": true
        }
      ]
    },
    {
      "type": "group",
      "label": "Evaluation framework",
      "showOutline": true,
      "components": [
        {
          "type": "textfield",
          "label": "Evaluation stage",
          "key": "ratingCriteria.stage",
          "validate": { "required": true }
        },
        {
          "type": "textfield",
          "label": "Evaluator role",
          "key": "ratingCriteria.evaluatorRole",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Score scale minimum",
          "key": "0",
          "validate": { "required": true }
        },
        {
          "type": "number",
          "label": "Score scale maximum",
          "key": "5",
          "validate": { "required": true, "min": 1 }
        },
        {
          "type": "number",
          "label": "Minimum passing score",
          "key": "ratingCriteria.minimumPassingScore",
          "validate": { "required": true, "min": 0 }
        }
      ]
    },
    {
      "type": "group",
      "label": "Category weights (%)",
      "showOutline": true,
      "components": [
        {
          "type": "number",
          "label": "Technical / skills",
          "key": "ratingCriteria.weights.skills",
          "validate": { "required": true, "min": 0, "max": 100 }
        },
        {
          "type": "number",
          "label": "Behavioral / soft skills",
          "key": "ratingCriteria.weights.behavioral",
          "validate": { "required": true, "min": 0, "max": 100 }
        },
        {
          "type": "number",
          "label": "Experience",
          "key": "ratingCriteria.weights.experience",
          "validate": { "required": true, "min": 0, "max": 100 }
        },
        {
          "type": "number",
          "label": "Interview",
          "key": "ratingCriteria.weights.interview",
          "validate": { "required": true, "min": 0, "max": 100 }
        }
      ]
    },
    {
      "type": "group",
      "label": "Scoring guidance",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "Key evaluation criteria (one per line)",
          "key": "ratingCriteria.criteria"
        },
        {
          "type": "textarea",
          "label": "Red flags (one per line)",
          "key": "ratingCriteria.redFlags"
        }
      ]
    },
    {
      "type": "group",
      "label": "Final decision",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "Recommendation options (one per line)",
          "key": "ratingCriteria.recommendations",
          "validate": { "required": false }
        }
      ]
    }
  ],
  "type": "default",
  "id": "define-candidate-rating-criteria",
  "executionPlatform": "Camunda Cloud",
  "executionPlatformVersion": "8.8.0",
  "schemaVersion": 19
}