{
  "components": [
    {
      "type": "text",
      "text": "# Create ATS checklist"
    },
    {
      "type": "text",
      "text": "Review candidate rules and confirm ATS screening behavior."
    },
    {
      "type": "group",
      "label": "Context (read-only)",
      "showOutline": true,
      "components": [
        {
          "type": "textfield",
          "label": "Job title",
          "key": "hiringRequest.job_opening.job_title",
          "readOnly": true
        },
        {
          "type": "textfield",
          "label": "Department",
          "key": "hiringRequest.job_opening.department",
          "readOnly": true
        }
      ]
    },
    {
      "type": "group",
      "label": "Eligibility rules (reference)",
      "showOutline": true,
      "components": [
        {
          "type": "number",
          "label": "Minimum legal working age",
          "key": "candidateRules.eligibility.minLegalWorkingAge",
          "readOnly": true
        },
        {
          "type": "checkbox",
          "label": "Work authorization required",
          "key": "candidateRules.eligibility.workAuthorizationRequired",
          "readOnly": true
        },
        {
          "type": "number",
          "label": "Minimum years of experience",
          "key": "candidateRules.eligibility.minYearsExperience",
          "readOnly": true
        }
      ]
    },
    {
      "type": "group",
      "label": "Scoring rules (reference)",
      "showOutline": true,
      "components": [
        {
          "type": "number",
          "label": "Score scale minimum",
          "key": "candidateRules.rating.scaleMin",
          "readOnly": true
        },
        {
          "type": "number",
          "label": "Score scale maximum",
          "key": "candidateRules.rating.scaleMax",
          "readOnly": true
        },
        {
          "type": "number",
          "label": "Minimum passing score",
          "key": "candidateRules.rating.minimumPassingScore",
          "readOnly": true
        }
      ]
    },
    {
      "type": "group",
      "label": "ATS behavior (final)",
      "showOutline": true,
      "components": [
        {
          "type": "checkbox",
          "label": "Auto-reject if eligibility rules fail",
          "key": "atsChecklist.rejectOnEligibilityFail"
        },
        {
          "type": "checkbox",
          "label": "Auto-reject if score is below minimum",
          "key": "atsChecklist.rejectOnLowScore"
        },
        {
          "type": "checkbox",
          "label": "Send borderline cases to manual review",
          "key": "atsChecklist.manualReviewForBorderline"
        }
      ]
    },
    {
      "type": "group",
      "label": "Documents",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "Required documents (one per line)",
          "key": "atsChecklist.requiredDocuments",
          "description": "Example: CV, Portfolio, Work permit proof."
        },
        {
          "type": "checkbox",
          "label": "Reject if documents are missing",
          "key": "atsChecklist.rejectIfDocumentsMissing"
        }
      ]
    },
    {
      "type": "group",
      "label": "Notes (optional)",
      "showOutline": true,
      "components": [
        {
          "type": "textarea",
          "label": "ATS notes",
          "key": "atsChecklist.notes"
        }
      ]
    }
  ],
  "type": "default",
  "id": "create-ats-checklist",
  "executionPlatform": "Camunda Cloud",
  "executionPlatformVersion": "8.8.0",
  "schemaVersion": 19
}